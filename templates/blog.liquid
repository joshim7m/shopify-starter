<section class="mt-3 py-10">
  <div class="container">
    <h1 class="font-medium text-2xl my-5">{{ blog.title }}</h1>

    {% paginate blog.articles by 10 %}
    <div class="grid grid-cols-5 gap-5">
      {% for article in blog.articles%}
      <div class="rounded shadow p-2">
        <img src="{{ article.featured_image | img_url }}" alt="">

        <div class="content">
          <h2>{{ article.title | link_to: article.url }}</h2>
          <p>{{ article.excerpt }}</p>
          <div>
            {{ article.author }} @ {{ article.created_at}}
          </div>
        </div>
      </div>
      {% endfor %}
    </div>
    {% if paginate.pages > 1 %}
      {{ paginate | default_pagination }}
    {% endif %}

    {% endpaginate %}
  </div>
</section>



