<!-- Frontpage/Home collection's products -->
<section>
  <div class="container">
    <div>
      <div class="font-medium text-2xl">{{ collections['frontpage'].title }}</div>
    </div>

    {% paginate collections['frontpage'].products by 6 %}
    <div class="mt-10 grid grid-cols-6 gap-5">
      {% for product in collections['frontpage'].products  %}
       <div>
        <div>
          <img src="{{ product.featured_image | img_url: width: 600}}" alt="">
        </div>
         <div>
           <h2>{{ product.title | link_to: product.url }}</h2>
           <div>
             <p>{{ product.price | money }}</p>
           </div>
         </div>
       </div>
      {% endfor %}
    </div>
    {% endpaginate %}
  </div>
</section>