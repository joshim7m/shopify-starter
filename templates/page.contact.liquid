<section class="mt-3 py-10">
  <div class="container">
    <div class="my-7">
      <h1 class="font-medium text-2xl">{{ page.title }}</h1>
    </div>

    <div class="max-w-xl mx-auto bg-white shadow-lg py-16 px-10">
      {% form 'contact' %}
        {% if form.posted_successfully? %} Thank you for your contact {% endif %}
        {{ form.errors | default_errors }}
        <div>
          <label class="block text-gray-700" for="ContactFormName">Name</label>
          <input class="w-full h-10 rounded border border-gray-400 px-2" type="text" id="ContactFormName" name="contact[name]">
        </div>
        <div>
          <label class="block text-gray-700" for="ContactFormEmail">Email</label>
          <input class="w-full h-10 rounded border border-gray-400 px-2" type="email" id="ContactFormEmail" name="contact[email]">
        </div>
        <div>
          <label class="block text-gray-700" for="ContactFormPhone">Phone</label>
          <input class="w-full h-10 rounded border border-gray-400 px-2" type="tel" id="ContactFormPhone" name="contact[phone]">
        </div>
        <div>
          <label class="block text-gray-700" for="ContactFormMessage">Message</label>
          <textarea class="w-full h-20 rounded border border-gray-400 px-2" rows="10" id="ContactFormMessage" name="contact[body]"></textarea>
        </div>
        <div>
          <input class="btn" type="submit" value="send">
        </div>
      {% endform %}
    </div>
  </div>
</section>